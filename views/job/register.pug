extends ../layout

block content
  h1 
  p.lead Create a new job request!
  hr
  .row
    .col-md-6
      form(role='form' method='POST')
        input(type='hidden' name='_csrf', value=_csrf)
        .form-group
          label.control-label Owner name
          input.form-control(type='text' name='username')

        .form-group
          label.control-label Phone
          input.form-control(type='text' name='phone')

        label Category:
          each category in categories
            div
              input(type='radio' name='category', id=category, value=category)
              label(for=category)= category
        .form-group
          label.control-label Job Description
          input.form-control(type='text' name='description')
        button.btn.btn-raised(type='submit')
          i.fas.fa-location-arrow.fa-sm
          | Submit!