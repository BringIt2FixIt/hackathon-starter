extends ../layout

block content
  div.pb-2.mt-2.mb-4.border-bottom
    h3 Start helping
  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)

     
    h1.appTitle.bottomMargin Volunteer Registration
    div.row
      div.col-md-6.centered.bottomMargin.topMargin
        input(class="bottomBorder" placeholder="Volunteer Team" type="text" name="name")
    div.row
      div.col-md-6.centered.bottomMargin.topMargin
        input(class="bottomBorder" placeholder="Email*" type="text" name="name")
    div.row
      div.col-md-6.centered.bottomMargin.topMargin
        input(class="bottomBorder" placeholder="Phone" type="text" name="name")
    div.row
      div.col-md-6.centered
    H2 Expertise
    div(style="padding-left:8px;").col-md-6.centered.bottomMargin.topMargin
      div(class="bottomBorder" class="borderWidth") Select All That Are Relevant

      div.form-group.row
        label.col-md-6.col-form-label.font-weight-bold(for='categories') Categories
          each category in categories
              div
                  input(type='checkbox', class='smallMarginRight', name='categories', id=category, value=category)
                  label(for=category) #{category}
      div.form-group
        div.offset-md-6.pl-2
          button.col-md-6.btn.btn-primary(type='submit')
            i.far.fa-user.fa-sm
            | Submit
            